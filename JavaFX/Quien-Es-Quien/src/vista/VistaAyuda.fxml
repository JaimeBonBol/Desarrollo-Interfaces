<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="500.0" prefWidth="750.0" 
            stylesheets="@../estilos/estilos.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controlador.AyudaController">

    <left>
        <VBox spacing="5" prefWidth="200.0" styleClass="ayuda-sidebar">
            <Label text="ÍNDICE" styleClass="ayuda-menu-titulo"/>
            
            <Button text="1. Introducción" maxWidth="Infinity" styleClass="boton-menu-ayuda" onAction="#mostrarIntroduccion"/>
            <Button text="2. Objetivo del Juego" maxWidth="Infinity" styleClass="boton-menu-ayuda" onAction="#mostrarObjetivo"/>
            <Button text="3. Interfaz y Vidas" maxWidth="Infinity" styleClass="boton-menu-ayuda" onAction="#mostrarInterfaz"/>
            <Button text="4. Cómo Jugar (Paso a Paso)" maxWidth="Infinity" styleClass="boton-menu-ayuda" onAction="#mostrarComoJugar"/>
            <Button text="5. Acerca de" maxWidth="Infinity" styleClass="boton-menu-ayuda" onAction="#mostrarAcercaDe"/>
            
            <Region VBox.vgrow="ALWAYS" />
            
            <Button fx:id="btnCerrar" text="Cerrar Manual" maxWidth="Infinity" styleClass="boton-cerrar-ayuda" onAction="#cerrarVentana"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
            <content>
                <VBox fx:id="panelContenido" spacing="15" styleClass="ayuda-content-pane">
                    </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>